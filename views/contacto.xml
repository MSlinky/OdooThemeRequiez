<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template name="Contacto" id="contacto" page="True">
    <t t-call="website.layout">
      <div id="wrap">

        <div class="oe_structure"/>

        <style>
          iframe {
            width: 100%;
            height: 90vh;
            border: none;
          }
          *, *:before,  *:after{-webkit-box-sizing:inherit;box-sizing:inherit}
          .content h1{
              font-size: 3em;
              text-align: center;
              margin: 25px auto 25px auto;
              text-transform: uppercase;
              color: #542247;
          }
          .content h1 > div, .content h2 > div{
              display: inline-block;
          }
          .content h2{
              font-size: 2.5em;
              text-align: center;
              color: #542247;
          }
          .content h3{
              font-size: 2em;
              text-align: left;
              margin: 25px auto;
              text-transform: uppercase;
              color: #542247;
          }
          .content h3 > div{
              display:inline-block;
          }
          .content .section-width, h3, h2, h1{
              max-width: 1080px;
              margin: auto;
          }
          .content .section-width ul {
              padding: 5px 45px;
          }
          .content p{
              margin-bottom: 10px;
          }
          .content {
              padding: 0px;
          }
          .lineup {
              background-color: #542247;
              height: 4px;
              width: 100%;
              margin-top: 5px;
          }
          .btn{
              width: 100%;
              font-size:28px;
              -webkit-box-shadow: 0 8px 17px 2px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.2);
              box-shadow: 0 8px 17px 2px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.2);
              border-radius:none;
          }
          .btn input{
              color: white;
          }
          #enviar{
              width: 100%; 
              cursor: pointer;
          }

          label{
            position: relative;
            cursor: pointer;
            color: #666;
            font-size: 20px;
          }

          input[type="checkbox"], input[type="radio"]{
            position: absolute;
            right: 9000px;
          }

          /*Check box*/
          input[type="checkbox"] + .label-text:before{
            content: "\f096";
            font-family: "FontAwesome";
            speak: none;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing:antialiased;
            width: 1em;
            display: inline-block;
            margin-right: 5px;
          }

          input[type="checkbox"]:checked + .label-text:before{
            content: "\f14a";
            color: #542247;
            animation: effect 250ms ease-in;
          }

          input[type="checkbox"]:disabled + .label-text{
            color: #aaa;
          }

          input[type="checkbox"]:disabled + .label-text:before{
            content: "\f0c8";
            color: #ccc;
          }
          @keyframes effect{
            0%{transform: scale(0);}
            25%{transform: scale(1.3);}
            75%{transform: scale(1.4);}
            100%{transform: scale(1);}
          }

          .btn.btn-raised.btn-primary {
              color: #fff;
              background-color: #542247;
              border-color: #542247;
              font-weight: bold;
          }

          .ripple-container {
              position: absolute;
              top: 0;
              left: 0;
              z-index: 1;
              width: 100%;
              height: 100%;
              overflow: hidden;
              pointer-events: none;
              border-radius: inherit;
          }
        </style>

        <div class="content container">

          <section class="section-width">
            <h2>
                <div>
                    Contacto
                    <div class="lineup"></div>
                </div>
            </h2>
            <br/>
            <div>
              <center>
                <iframe src="https://www.google.com/maps/d/embed?mid=1HK4bjL9RuaBIRA1i3rOfhSIOBPz2DcvY" width="640" height="480"></iframe>
              </center>
            </div>
        
            <div class="form map">
              <form id="comentarios">
                <div class="row">
                  <div class="input-field col-md-12 form-group">
                    <label for="nombre">Nombre *</label>
                    <input class="validate form-control" id="nombre" required="" type="text"/> 
                  </div>
                  
                  <div class="input-field col-md-12">
                    <label for="correo">Correo *</label>
                    <input class="validate form-control" id="correo" required="" type="email"/>
                  </div>
                  
                  <div class="input-field col-md-12">
                    <label for="telefono">Tel√©fono</label>
                    <input class="validate form-control" id="telefono" type="text"/> 
                  </div>
                  
                  <div class="input-field col-md-12">
                    <label for="empresa">Empresa</label>
                    <input class="validate form-control" id="empresa" type="text"/> 
                  </div>
                </div>
              
              <div class="row" style="margin-top: 30px;">
                <div class="col-sm-12">
                  <label for="comentario">Comentario</label>
                  <textarea class="form-control" id="comentario"></textarea>
                </div>
              </div>

              <div class="row" style="margin-top: 30px;">
                <div class="col-sm-12">
                  <input class="btn btn-raised btn-primary" id="enviar" name="accion" type="submit" value="Enviar" />
                  <div class="ripple-container"></div>
                </div>
              </div>
            </form>
            </div>

          </section>

          <script>
            $(document).ready(formContacto);
          </script>
        </div>

      </div>
    </t>
  </template>
  <record id="services_page_contacto" model="website.menu">
    <field name="name">Contacto</field>
    <field name="url">/Contacto</field>
    <field name="parent_id" ref="website.main_menu" />
    <field name="sequence" type="int">4</field>
  </record>
</odoo>