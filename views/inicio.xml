<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template name="Inicio" id="inicio">
    <t t-call="website.layout">
      <div id="wrap">

        <div class="oe_structure"/>

          <div>
            <style type="text/css">
              #wrap{
                overflow: hidden;
                width: 100%;
              }
            
              #scene{
                position: relative;
              }
              .content-marcas-main{
                position: relative;
              }
              .main-marcas{
                position: absolute;
                top: calc(50% - 180px);
                width: 122px;
              }
              .SliderBar-selector {
                  margin: 10px 0;
                  padding: 15px 0;
                  width: 50%;
                  height: 14px;
                  position: relative;
                  cursor: pointer;
              }
              .SliderBar-selector-line {
                height: 1px;
                width: 30px;
                padding-left: 53px;
                background-color: red;
                position: absolute;
                top: 3.5px;
                left: 0;
                transform: scaleX(0);
                transform-origin: left center;
                transition: all 0.3s;
                font-weight: bold;
                line-height: 2.5;
              }
              .SliderBar-selector:hover .SliderBar-selector-line {
                transform: scaleX(1);
              }
              .SliderBar-selector.is-selected .SliderBar-selector-line {
                transform: scaleX(1);
              }
              .SliderBar-selector-dot {
                height: 8px;
                width: 8px;
                border-radius: 12px;
                background-color: red;
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: auto;
              }
              .SliderBar-selector:nth-child(1) .SliderBar-selector-dot, .SliderBar-selector:nth-child(1) .SliderBar-selector-line {
                color: #e64564;
                background-color: #e64564;
              }
              .SliderBar-selector:nth-child(2) .SliderBar-selector-dot, .SliderBar-selector:nth-child(2) .SliderBar-selector-line {
                color: #a93350;
                background-color: #a93350;
              }
              .SliderBar-selector:nth-child(3) .SliderBar-selector-dot, .SliderBar-selector:nth-child(3) .SliderBar-selector-line {
                color: #e73b39;
                background-color: #e73b39;
              }
              .SliderBar-selector:nth-child(4) .SliderBar-selector-dot, .SliderBar-selector:nth-child(4) .SliderBar-selector-line {
                color: #000;
                background-color: #000;
              }
              .SliderBar-selector:nth-child(5) .SliderBar-selector-dot, .SliderBar-selector:nth-child(5) .SliderBar-selector-line {
                color: #1a5848;
                background-color: #1a5848;
              }



              .background-animates{
                position: absolute;
                height: calc(100vh - 100px);
              }
              .background-animates > *{
                position: absolute;
              }

              .element1 {
                animation-duration: 1s;
                animation-delay: .3s;
              }
              .element2 {
                animation-duration: 1s;
                animation-delay: .5s;
              }
              .element3 {
                animation-duration: 1s;
                animation-delay: .7s;
              }

              .nopadding {
                padding: 0 !important;
                margin: 0 !important;
              }
              .content-grid-img img{
                width: 100%;
              }
              .container-images{
                overflow: hidden;
              }

              .container-img{

              }
            </style>

            <div class="content-marcas-main">

              <div class="main-marcas">
                <div class="SliderBar-content">
                  <div id="requiez" class="event-marca SliderBar-selector is-selected">
