<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="footer_marcas" name="Footer marcas">
    <section class="footer_marcas">
      <div class="container">
        <div class="row" style="margin: 80px 0;">
            <div class="col-xs-6 col-md-2 footer-marcas">
              <a href="/Marcas/Requiez">
                <img src="/theme_requiez/static/img/marcas/req.jpg"/>
              </a>
            </div>
            <div class="col-xs-6 col-md-2 footer-marcas">
              <a href="/Marcas/Labenze">
                <img src="/theme_requiez/static/img/marcas/labenze.jpg"/>
              </a>
            </div>
            <div class="col-xs-6 col-md-2 footer-marcas">
              <a href="/Marcas/Okamura">
                <img src="/theme_requiez/static/img/marcas/okamrua_logo-min.png"/>
              </a>
            </div>
            <div class="col-xs-6 col-md-2 footer-marcas">
              <a href="/Marcas/Infiniti">
                <img src="/theme_requiez/static/img/marcas/logoInfiniti.png"/>
              </a>
            </div>
            <div class="col-xs-6 col-md-2 footer-marcas">
              <a href="/Marcas/Quadrifoglio">
                <img style="width: 170px;height: auto;" src="/theme_requiez/static/img/marcas/logoQuadri.png"/>
              </a>
            </div>
          </div>
        </div> 
    </section>
  </template>

  <template id="place_into_footer_marcas" inherit_id="website.snippets" name="Footer marcas">
    <xpath expr="//div[@id='snippet_content']/div[@class='o_panel_body']" position="inside">
      <t t-snippet="theme_requiez.footer_marcas"
         t-thumbnail="/theme_requiez/static/src/img/ui/snippet_thumb.jpg"/>
    </xpath>
  </template>

</odoo>